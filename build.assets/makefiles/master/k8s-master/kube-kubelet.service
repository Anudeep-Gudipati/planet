[Unit]
Description=Kubernetes Kubelet
Documentation=https://github.com/kubernetes/kubernetes
Wants=docker.service

[Service]
EnvironmentFile=/etc/container-environment
ExecStartPre=/bin/systemctl is-active docker.service
ExecStart=/usr/bin/kubelet \
        --address=0.0.0.0 \
        --port=10250 \
        --hostname_override=${KUBE_NODE_NAME} \
        --api-servers=https://${KUBE_APISERVER}:6443 \
        --allow-privileged=false \
        --logtostderr=true \
        --cadvisor-port=4194 \
        --healthz-bind-address=0.0.0.0 \
        --healthz-port=10248 \
        --cluster-dns=${KUBE_CLUSTER_DNS_IP} \
        --cluster-domain=cluster.local \
        --pod-infra-container-image=${KUBE_APISERVER}:5000/gcr.io/google_containers/pause:3.0 \
        --client-ca-file=/var/state/root.cert \
        --anonymous-auth=false \
        --read-only-port=0 \
        --tls-cert-file=/var/state/apiserver.cert \
        --tls-private-key-file=/var/state/apiserver.key \
        --kubeconfig=/etc/kubernetes/kubelet.kubeconfig \
        --streaming-connection-idle-timeout=5m \
        --system-reserved=memory=500Mi \
        --eviction-hard="memory.available<500Mi,nodefs.available<10%,imagefs.available<15%,nodefs.inodesFree<5%,imagefs.inodesFree<5%" \
        --eviction-soft="memory.available<800Mi,nodefs.available<20%,imagefs.available<20%,nodefs.inodesFree<10%,imagefs.inodesFree<10%" \
        --eviction-soft-grace-period="memory.available=30m,nodefs.available=1h,nodefs.inodesFree=1h,imagefs.available=1h,imagefs.inodesFree=1h" \
        --event-qps=0 $KUBE_CLOUD_FLAGS

Restart=always
RestartSec=5
StartLimitInterval=3600
StartLimitBurst=720
